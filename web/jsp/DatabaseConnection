package PRG371WebApplication;
//This code is code connects JAVA to PostgreSQL
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

public class DatabaseConnection {
    
    private static final String URL = "jdbc:postgresql://localhost:5432/_DB.sql"; // Database name : _DB.sql
        private static final String USER = "postgres"; // This my username, that was the only way the code would sort of run 
        private static final String PASSWORD = "********"; //my password

        public static Connection getConnection() throws SQLException {
            return DriverManager.getConnection(URL, USER, PASSWORD);
        }
    
}
